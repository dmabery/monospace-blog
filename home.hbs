{{!< default}}

<div class="gh-page">
    <div class="gh-container">

        <header class="gh-page-head full-vh">

            <h1>{{@site.title}}</h1>

            <p>
                {{#if @site.description}}
                    {{@site.description}}
                {{else}}
                    A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
                {{/if}}
            </p>

        </header>
        <div class="gh-canvas">
            <p class="text-center fade-out"> Scroll to read more.</p>
        </div>

        <div>
            {{#get "posts"}}
                {{#foreach posts}}

                    <article class="gh-article {{post_class}}">
                        <header class="gh-header gh-canvas">

                            <h1 class="gh-title"><a href="{{url}}">{{title}}</a></h1>

                        </header>

                            <div class="gh-content gh-canvas">
                                {{content}}
                            </div>
                    </article>
                        <hr>
                    {{/foreach}}
                {{/get}}

        </div>

    </div>
</div>