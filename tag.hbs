{{!< default}}

<div class="gh-page">
    <div class="gh-container">

        {{#tag}}
        <header class="gh-page-head">

            <h1>{{name}}</h1>

            <p>
                {{#if description}}
                    {{description}}
                {{else}}
                    A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
                {{/if}}
            </p>

            {{#if feature_image}}
                <img class="gh-page-image" src="{{feature_image}}" alt="{{name}}" />
            {{/if}}

        </header>
        {{/tag}}

        <div class="gh-postfeed">
        {{#foreach posts}}

         <div class="rounded-collection-card">
                <div class="card-body row align-items-center">
                    <div class="col-8">
                        <a class="text-light col-md-4" href="{{url}}">
                            <h3>{{title}}</h3>
                        </a>
                        <div class="p-preview">
                            <p>{{excerpt characters="170"}}</p>
                        </div>
                    </div>
                        <div class="page-meta col-md-2 offset-md-2">
                            {{date}}
                        </div>
                    </div>
            </div>

        {{/foreach}}
        </div>

    </div>
</div>
